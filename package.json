{
  "name": "ngo-donations-site",
  "version": "1.0.0",
  "description": "This site is made to help the person who is willing to donate.",
  "main": "app.js",
  "scripts": {
    "server": "npm run dev --prefix server",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client && npm install"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rishabhborn2win/ngo-donations-site.git"
  },
  "author": "DSC NITP",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dscnitp/ngo-donations-site/issues"
  },
  "homepage": "https://github.com/rishabhborn2win/ngo-donations-site#readme",
  "dependencies": {
    "prettier": "^2.2.1"
  }
}
